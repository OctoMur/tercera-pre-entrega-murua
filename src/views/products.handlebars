<div class="d-flex justify-content-center align-items-center">
    <h1 class="text-center">Productos</h1>
    <a href="/carts/{{cid}}" class="ms-5">
    <i class="bi bi-cart cart-icon"></i>
    </a>

<h1> Productos </h1>
{{#each products}}
<div>
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <p>Price: ${{price}}</p>
    <p>Category: {{category}} </p>
    <form action="/api/carts/{{../cid}}/product/{{pid}}" method="POST">
        <button class="btnMios" type="submit">Agregar al Carrito</button>
    </form>
</div>
{{/each}}


{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"> Anterior </a>
{{/if}}
{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"> Siguiente </a>
{{/if}} 

<p>Pagina {{currentPage}} de {{totalPages}} </p>

